# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# CORS Configuration
# SECURITY: In production, set to specific domains (comma-separated)
# Example: ALLOWED_ORIGINS=https://lotolink.com,https://www.lotolink.com,https://admin.lotolink.com
# For development, use: ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
# For production, NEVER use wildcard (*) - specify exact domains
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Rate Limiting Configuration
# SECURITY: Protects against brute force and DDoS attacks
# RATE_LIMIT_TTL: Time window in milliseconds (default: 900000 = 15 minutes)
# RATE_LIMIT_MAX: Maximum requests per IP per time window (default: 100)
# For stricter limits, reduce RATE_LIMIT_MAX or decrease RATE_LIMIT_TTL
RATE_LIMIT_TTL=900000
RATE_LIMIT_MAX=100

# Database (Postgres)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=lotolink
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=lotolink_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_QUEUE_PLAYS=plays_queue
RABBITMQ_DLQ=plays_dlq

# JWT
# IMPORTANT: Generate secure random secrets for production!
# Example: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration
# Google OAuth - Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Apple OAuth - Get credentials from: https://developer.apple.com/
APPLE_CLIENT_ID=your_apple_client_id_here
APPLE_TEAM_ID=your_apple_team_id_here
APPLE_KEY_ID=your_apple_key_id_here

# Facebook OAuth - Get credentials from: https://developers.facebook.com/
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Admin Code Validation Service
# CRITICAL SECURITY: This service validates admin codes externally
# NEVER embed admin codes or validation logic in the application code
# The external service should be separately deployed and secured
ADMIN_VALIDATION_SERVICE_URL=https://your-admin-validation-service.com/api
ADMIN_SERVICE_KEY=your_secure_service_key_here

# HMAC for Banca Integration
# IMPORTANT: Generate secure random secrets for production!
# Example: openssl rand -hex 64
HMAC_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
HMAC_TIMESTAMP_TOLERANCE_SECONDS=120

# Banca Configuration
USE_MOCK_BANCA=true
BANCA_API_URL=http://localhost:4000
BANCA_HMAC_SECRET=your_banca_hmac_secret_here
BANCA_TIMEOUT_MS=30000

# Payment Gateway (Stripe)
# Get keys from: https://dashboard.stripe.com/apikeys
USE_MOCK_PAYMENT=true
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Commission Configuration
# Separate account for commission deposits
COMMISSION_STRIPE_ACCOUNT_ID=acct_commission_account_id
COMMISSION_PERCENTAGE=5.0
# Separate account for card payment processing fees
CARD_PROCESSING_ACCOUNT_ID=acct_processing_account_id

# Lottery Results Provider
# Configure when you have an official provider contract
USE_MOCK_LOTTERY_RESULTS=true
LOTTERY_RESULTS_API_URL=
LOTTERY_RESULTS_API_KEY=

# Email Configuration
# Set EMAIL_ENABLED=true to enable email notifications
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@lotolink.com
ADMIN_EMAIL=admin@lotolink.com

# Play Worker
PLAY_WORKER_MAX_RETRIES=3
PLAY_WORKER_RETRY_DELAY_MS=5000
